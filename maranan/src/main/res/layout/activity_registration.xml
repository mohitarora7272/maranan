<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout_reg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >

        <!-- Framelayout to display Fragments -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="90"
                        android:background="@android:color/white"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp" >

                            <EditText
                                android:id="@+id/edt_LastName_Reg"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/greybg_heb"
                                android:drawingCacheQuality="high"
                                android:ems="10"
                                android:gravity="right|center_vertical"
                                android:hint="@string/lastname_hebrew"
                                android:inputType="textEmailAddress"
                                android:paddingRight="60dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="15sp" >
                            </EditText>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/edt_LastName_Reg"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/mail"
                                android:contentDescription="@string/app_name" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" >

                            <EditText
                                android:id="@+id/edt_FirstName_Reg"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/greybg_heb"
                                android:drawingCacheQuality="high"
                                android:ems="10"
                                android:gravity="right|center_vertical"
                                android:hint="@string/firstname_hebrew"
                                android:inputType="textEmailAddress"
                                android:paddingRight="60dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="15sp" >
                            </EditText>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/edt_FirstName_Reg"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/mail"
                                android:contentDescription="@string/app_name" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" >

                            <EditText
                                android:id="@+id/edt_EmailAddress_Reg"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/greybg_heb"
                                android:drawingCacheQuality="high"
                                android:ems="10"
                                android:gravity="right|center_vertical"
                                android:hint="@string/email_hebrew"
                                android:inputType="textEmailAddress"
                                android:paddingRight="60dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="15sp" >
                            </EditText>
                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:progressDrawable="@drawable/circular_progress_bar" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/edt_EmailAddress_Reg"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/mail"
                                android:contentDescription="@string/app_name" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <EditText
                                android:id="@+id/edt_Password_Reg"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/greybg_heb"
                                android:drawingCacheQuality="high"
                                android:ems="10"
                                android:gravity="right|center_vertical"
                                android:hint="@string/passwordReg_hebrew"
                                android:inputType="textPassword"
                                android:paddingRight="60dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/edt_Password_Reg"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/password"
                                android:contentDescription="@string/app_name" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <EditText
                                android:id="@+id/edt_PasswordRE_Reg"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/greybg_heb"
                                android:drawingCacheQuality="high"
                                android:ems="10"
                                android:gravity="right|center_vertical"
                                android:hint="@string/passwordAgain_hebrew"
                                android:inputType="textPassword"
                                android:paddingRight="60dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/edt_PasswordRE_Reg"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/password"
                                android:contentDescription="@string/app_name" />
                        </RelativeLayout>

                        <HorizontalScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/signature_hebrew"
                                    android:textColor="@color/black_bg" />

                                <CheckBox
                                    android:id="@+id/chk_signature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </HorizontalScrollView>

                        <Button
                            android:id="@+id/btn_Register"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/login_heb"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/realtive_reg"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/bg_navigation_blue" >

            <ImageView
                android:id="@+id/img_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/sign_out"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="43dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_reg"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>