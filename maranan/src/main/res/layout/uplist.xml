<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/btn_sequence_uplist"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/toggle_selector"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/tv_vid_title_uplist"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_sequence_uplist"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/play_a_row"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_project_uplist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/project_eye"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tv_value_project_uplist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/img_project_uplist"
            android:text="@string/zero"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_vid_des_uplist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img_project_uplist"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:lines="2"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_value_project_uplist"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tv_vid_des_uplist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </ScrollView>
    </RelativeLayout>

    <View
        android:id="@+id/view_line_list"
        android:layout_width="fill_parent"
        android:layout_height="0.5sp"
        android:background="@color/black_bg" />

</LinearLayout>